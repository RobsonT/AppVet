<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FavoriteList">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFavorite"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFavorite"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="5dp"
                android:tag="imagemFavorito" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:tag="nomeFavorito"
                    android:text="Place_holder"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/priceFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:tag="precoFavorito"
                    android:text="Place_holder"
                    android:textSize="17sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/closeFavorito"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/com_facebook_close" />

    </androidx.cardview.widget.CardView>

</LinearLayout>