<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBEFF0"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".CadastroPet">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="15sp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Adicionar PET"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20sp">

                <AutoCompleteTextView
                    android:id="@+id/racaPet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:completionHint="Escolha uma raça"
                    android:completionThreshold="1"
                    android:gravity="center"
                    android:hint="Qual a raça dele(a)?"
                    android:tag="racaPet" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15sp"
                    android:text="Castrado?"
                    android:textColor="#23472F"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/castradoSim"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                        android:tag="castradoSim"
                        app:srcCompat="@drawable/positivo" />

                    <ImageView
                        android:id="@+id/castradoNao"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                        android:tag="castradoNao"
                        app:srcCompat="@drawable/negativo" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20sp">

                <EditText
                    android:id="@+id/pesoPet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Quanto ele(a) pesa?"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="25sp"
                    android:text="Qual o porte dele(a)?"
                    android:textColor="#23472F"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/portePequenoPet"
                        android:layout_width="match_parent"
                        android:layout_height="145dp"
                        android:layout_weight="1"
                        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                        android:tag="portePequenoPet"
                        app:srcCompat="@drawable/iconportepequeno" />

                    <ImageView
                        android:id="@+id/porteMedioPet"
                        android:layout_width="wrap_content"
                        android:layout_height="145dp"
                        android:layout_weight="1"
                        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                        android:tag="porteMedioPet"
                        app:srcCompat="@drawable/iconportemedio" />

                    <ImageView
                        android:id="@+id/porteGrandePet"
                        android:layout_width="wrap_content"
                        android:layout_height="145dp"
                        android:layout_weight="1"
                        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                        android:tag="porteGrandePet"
                        app:srcCompat="@drawable/iconportegrande" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/voltarPet2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="#e01f00"
                    android:text="voltar"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/cadastroPet2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="#00a300"
                    android:onClick="register"
                    android:tag="avancarPetTela2"
                    android:text="AVANÇAR"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/iconcadastropetsegundatela" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>