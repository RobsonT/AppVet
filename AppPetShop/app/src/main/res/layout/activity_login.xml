<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBEFF0"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:paddingTop="25dp"
                app:srcCompat="@drawable/imagem_inicial" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/emailUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginRight="5sp"
                    android:ems="10"
                    android:hint="Digite seu e-mail"
                    android:inputType="textPersonName"/>

                <EditText
                    android:id="@+id/senhaUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginRight="5sp"
                    android:cursorVisible="true"
                    android:ems="10"
                    android:hint="Senha"
                    android:inputType="textPassword"
                    android:password="true"
                    android:tag="senhaUsuario" />

                <Button
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="5sp"
                    android:onClick="enter"
                    android:tag="loginUsuario"
                    android:text="Entrar" />

                <TextView
                    android:id="@+id/recuperarSenha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:onClick="recoverPasssword"
                    android:text="Esqueci minha senha"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.google.android.gms.common.SignInButton
                        android:id="@+id/loginGoogle"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:drawableLeft="@drawable/googleg_standard_color_18"
                        android:tag="loginGoogle" />

                    <com.facebook.login.widget.LoginButton
                        android:id="@+id/loginFacebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#1976D1"
                        android:drawableLeft="@drawable/ic_facebook"
                        android:tag="loginFacebook"
                        android:text="Facebook"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <Button
                    android:id="@+id/criarConta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:onClick="newUser"
                    android:tag="criarConta"
                    android:text="Sou um novo usuÃ¡rio" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>