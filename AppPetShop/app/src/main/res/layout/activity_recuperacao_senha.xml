<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBEFF0"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".RecuperacaoSenha">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:background="@drawable/imagem_inicial" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:text="Digite seu email cadastrado e um numero, que iremos enviar um SMS com a sua senha:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/emailRecuperacao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Digite seu email aqui"
                    android:inputType="textPersonName"
                    android:padding="20dp" />

                <EditText
                    android:id="@+id/numeroSMS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Ex: (000) 9.9999-9999"
                    android:inputType="numberSigned"
                    android:paddingBottom="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/voltarSenha"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:background="#e01f00"
                        android:text="voltar"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/recuperarsenha"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="#00a300"
                        android:onClick="enviarSMS"
                        android:text="recuperar senha"
                        android:textColor="@android:color/white" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>