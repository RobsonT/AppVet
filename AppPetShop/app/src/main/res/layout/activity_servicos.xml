<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBEFF0"
    tools:context=".Servicos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SERVIÇOS DISPONIVEIS"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Selecione o serviço desejado:" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#B1CACC"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/servicoBanho"
                        android:layout_width="110dp"
                        android:layout_height="90dp"
                        android:layout_margin="15dp"
                        app:srcCompat="@drawable/servicobanhoselected" />

                    <ImageView
                        android:id="@+id/sevicoTosa"
                        android:layout_width="110dp"
                        android:layout_height="90dp"
                        android:layout_margin="15dp"
                        app:srcCompat="@drawable/servicotosaselected" />

                    <ImageView
                        android:id="@+id/servicoHospetagem"
                        android:layout_width="110dp"
                        android:layout_height="90dp"
                        android:layout_margin="15dp"
                        app:srcCompat="@drawable/servicohospedagemselected" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/servicoAdestrar"
                        android:layout_width="110dp"
                        android:layout_height="90dp"
                        android:layout_margin="15dp"
                        app:srcCompat="@drawable/servicoadestrarselected" />

                    <ImageView
                        android:id="@+id/servicoCastrar"
                        android:layout_width="110dp"
                        android:layout_height="90dp"
                        android:layout_margin="15dp"
                        app:srcCompat="@drawable/servicocastrarselected" />

                    <ImageView
                        android:id="@+id/servicoGeral"
                        android:layout_width="110dp"
                        android:layout_height="90dp"
                        android:layout_margin="15dp"
                        app:srcCompat="@drawable/servicogeralselected" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:text="ESCOLHA O HORÁRIO:" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="QUAL PET IRÁ RECEBER O SERVIÇO?" />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="250dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom"
                        android:text="ESCOLHA O DIA PARA A CONSULTA:" />

                    <EditText
                        android:id="@+id/editText2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="ADICIONAR SERVIÇO" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>